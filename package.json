{
  "private": true,
  "name": "f1tv-watch-together",
  "version": "0.1.0",
  "description": "Watch F1TV Races together",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm/transpile-only/main.ts",
    "start": "nodemon --exec node --loader ts-node/esm/transpile-only src/main.ts",
    "prepare": "husky install",
    "lint": "eslint ./src",
    "serve": "node build/main.js"
  },
  "keywords": [
    "f1tv",
    "f1",
    "formula1",
    "watch",
    "together"
  ],
  "engines": {
    "node": ">=16.0.0",
    "npm": ">= 8.0.0"
  },
  "author": "Markus Ort",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.44.0",
    "@typescript-eslint/parser": "^5.44.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
