{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "outDir": "build",
      "rootDir": "src",
  
      "strict": true,
      "moduleResolution": "NodeNext",
      "allowSyntheticDefaultImports": true,
  
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "exclude": ["build", "./node_modules/*"]
  }